<% @title = "Pricing" %>

<%= content_for :js_libs, "modernizr" %>
<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="container py-5">
        <div class="row">
          <div class="col-12">
            <h2 class="pt-5 text-center header-separator"><%= t("pricing.title") %></h2>
            <p class="lead text-center"><%= t("pricing.description_1") %></p>
            <p class="lead text-center pb-5"><%= t("pricing.description_2") %></p>
          </div>
        </div>
        <div class="row equal-cols">
          <div class="col-12 col-md-4">
            <div class="pricing-table-3 shadow">
              <header>
                <h5 class="font-weight-bold text-center text-uppercase m-0"><%= t("pricing.free_trial.title") %></h5>
                <p class="text-muted text-uppercase mb-5"><%= raw t("pricing.free_trial.sub_title") %></p>
                <h1 class="font-weight-normal m-0 mb-4"><%= raw t("pricing.free_trial.price") %></h1>
                <%= link_to t("pricing.call_to_action"), new_user_registration_path, class: "btn btn-lg btn-info p-4" %>
              </header>
              <div class="p-5"><%= raw t("pricing.free_trial.description") %></div>
            </div>
          </div>
          <div class="col-12 col-md-4">
            <div class="pricing-table-3 shadow">
              <header>
                <h5 class="font-weight-bold text-center text-uppercase m-0"><%= t("pricing.usage.title") %></h5>
                <p class="text-muted text-uppercase mb-5"><%= raw t("pricing.usage.sub_title") %></p>
                <h1 class="font-weight-normal m-0 mb-4"><%= raw t("pricing.usage.price") %></h1>
                <%= link_to t("pricing.call_to_action"), new_user_registration_path, class: "btn btn-lg btn-info p-4" %>                
              </header>
              <div class="p-5"><%= raw t("pricing.usage.description") %></div>
            </div>
          </div>
          <div class="col-12 col-md-4">
            <div class="pricing-table-3 shadow">
              <header>
                <h5 class="font-weight-bold text-center text-uppercase m-0"><%= t("pricing.package.title") %></h5>
                <p class="text-muted text-uppercase mb-5"><%= raw t("pricing.package.sub_title") %></p>
                <h1 class="font-weight-normal m-0 mb-4"><%= raw t("pricing.package.price") %></h1>
                <%= link_to t("pricing.call_to_action"), new_user_registration_path, class: "btn btn-lg btn-info p-4" %>                
              </header>
              <div class="p-5"><%= raw t("pricing.package.description") %></div>
            </div>
          </div>
        </div>
        <div class="row mt-5">
          <div class="col-12">
            <p class="lead text-center"><%= t("pricing.description_3") %></p>
            <p class="lead text-center"><%= t("pricing.description_4") %> <%= mail_to contact_email, t("pricing.email_us") %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  mixpanel.track("Visit pricing");
</script>
