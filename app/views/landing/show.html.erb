<main class="landing-4">
  <div class="value-proposition">
    <div class="container">
      <div class="row pb-5">
        <div class="col-12 col-md-7 text-white mt-5 pt-5 pb-5">
          <h1 class="text-shadow-light leading-normal">Company data. Straight.</h1>
          <p class="lead font-weight-medium text-shadow-light">Boost you business with the data you need about your prospects and customers, in a very simple way.</p>
          <a class="btn btn-lg btn-success" href="javascript:">Find out more</a>
        </div>
        <div class="col-12 col-md-5 mt-5 pt-5 pb-5">
          <%= form_for "", url: search_companies_path, html: { method: :get, novalidate: true, class: "form d-flex flex-column bg-white p-4" } do |f| %>
            <p class="text-center">Give it a try!</p>
            <div class="input-group input-group-sm mb-2">
              <span class="input-group-addon" id="basic-addon1"><%= theme_icon_tag "search" %></span>
              <%= f.text_field :q, required: true, autofocus: true, class: "form-control", placeholder: "Company name" %>
            </div>
            <%= f.submit "Search", class: "btn btn-primary ml-auto mt-2" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>

<section class="mt-5 pt-5 mb-5 pb-5">
  <%= render partial: 'landing/features' %>
</section>
