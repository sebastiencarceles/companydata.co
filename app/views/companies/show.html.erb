<% @title = @company.name %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-4">
      <div class="card">
          <%= image_tag @company.logo_url, class: "card-img-top", alt: @company.name %>
          <div class="card-body">
            <h4 class="card-title"><%= @company.name %></h4>
            <p class="card-text"><%= simple_format @company.presentation %></p>  
          </div>
        </div>
    </div>
    <div class="col-md-8">
    
    </div>
  </div>
</div>