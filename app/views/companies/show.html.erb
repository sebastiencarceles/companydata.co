<% @title = @company.name %>

<div class="container">
  <div class="row mt-2 mb-2">
    <div class="col-md-6">
      <div class="row">
        <div class="m-1 card card-image card-image-avatar card-full-height">
          <div class="cover-content">
            <div class="card-header">
              <% if @company.logo_url.present? %>
              <%= image_tag @company.logo_url, class: "img-thumbnail shadow", alt: @company.name, width: "128", height: "128" %>
              <% end %>
              <h4 class="card-title text-primary mt-4 my-2"><%= @company.name %></h4>
              <h6 class="text-center text-muted"><%= founded(@company) %></h6>
            </div>
          </div>
        </div>  
      </div>
      <div class="row">
        <div class="m-1 card card-tabbed">
          <div class="card-header">
            <h6>Profile</h6>
          </div>
          <div class="card-body">
            <table class="table table-sm font-size-small">
              <% profile_labels_attributes.each do |label, attribute| %>
              <% if @company[attribute].present? %>
              <tr>
                <td><strong><%= label %></strong></td>
                <td><%= @company[attribute] %></td>
              </tr>
              <% end %>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="row">
        <div class="m-1 card">
          <div class="card-body">
            <h4 class="card-title">Presentation</h4>
            <% if @company.presentation.present? %>
            <p class="card-text"><%= simple_format @company.presentation %></p>  
            <% end %>
            <% if linkedin_url(@company) %>
            <%= link_to linkedin_url(@company), "data-toggle": "tooltip", "data-original-title": "LinkedIn profile", target: "_blank" do %>
            <%= fa_icon_tag "linkedin-square" %>
            <% end %>
            <% end %>
            <% if @company.source_url %>
            <%= link_to @company.source_url, "data-toggle": "tooltip", "data-original-title": "Main data source", target: "_blank" do %>
            <%= fa_icon_tag "external-link" %>
            <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="m-1 card card-tile-hero">
          <div class="card-header text-center">
            <i class="ti-map display-1 text-brand-primary-lightest"></i>
          </div>
          <div class="card-body text-center">
            <small><%= simple_format(full_address(@company)) %></small>
            <h3 class="m-0 leading-normal"><%= @company.country %></h3>
          </div>
        </div>      
      </div>
    </div>
  </div>
</div>