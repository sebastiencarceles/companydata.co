<% @title = @query %>

<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6 mt-5 pt-5 pb-5">
      <%= render "shared/search" %>
    </div>
  </div>
  <% if @query.present? %>    
    <div class="row mt-3">
      <div class="col-md-12">
        <div class="card card-sheet sheet-condensed">
          <table class="table table-striped table-hover table-sm-responsive">
            <tbody>
              <% @companies.each do |company| %>
              <%= render "companies/settlement", company: company %>
              <% end %>
              <% if @companies.empty? %>
              <tr>
                <td colspan=42 class='text-center'><%= t("searches.create.no_companies") %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="row mb-4">
      <div class="col-md-12">
        <%= paginate @companies %>
      </div>
    </div>
  <% end %>
</div>

<script type="text/javascript">
  mixpanel.track("Visit search results", {"query": "<%= @query %>"});
</script>
