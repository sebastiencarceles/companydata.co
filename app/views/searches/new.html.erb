<% @title = @search.query %>

<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6 mt-5 pt-5 pb-5">
      <%= form_for @search, url: searches_path, html: { novalidate: true, class: "card card-image card-image-avatar card-full-height form d-flex flex-column bg-white p-4" } do |f| %>
        <p class="text-center"><%= t("searches.new.search.title") %></p>
        <div class="input-group input-group-sm mb-2">
          <span class="input-group-addon" id="basic-addon1"><%= theme_icon_tag "search" %></span>
          <%= f.text_field :query, required: true, autofocus: true, class: "form-control", placeholder: t("searches.new.search.placeholder") %>
        </div>
        <%= f.submit t("searches.new.search.action"), class: "btn btn-primary ml-auto mt-2" %>
      <% end %>
    </div>
  </div>
</div>
