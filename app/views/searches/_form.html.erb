<%= form_for @search, url: searches_path, html: { novalidate: true, class: "card card-image card-image-avatar card-full-height form d-flex flex-column bg-white p-4" } do |f| %>
  <p class="text-center"><%= t("searches.form.title") %></p>
  <%= f.text_field :query, required: true, class: "form-control", placeholder: t("searches.form.placeholder"), id: "js-search-autocomplete" %>
  <%= f.submit t("searches.form.action"), class: "btn btn-primary ml-auto mt-2" %>
<% end %>