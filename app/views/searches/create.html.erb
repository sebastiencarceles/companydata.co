<% @title = @search.query %>

<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6 mt-5 pt-5 pb-5">
      <%= form_for @search, url: searches_path, html: { novalidate: true, class: "card card-image card-image-avatar card-full-height form d-flex flex-column bg-white p-4" } do |f| %>
        <p class="text-center"><%= t("searches.create.search.title") %></p>
        <%= f.text_field :query, required: true, autofocus: true, class: "form-control", placeholder: t("searches.create.search.placeholder"), id: "js-search-autocomplete" %>
        <%= f.submit t("searches.create.search.action"), class: "btn btn-primary ml-auto mt-2" %>
      <% end %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-12">
      <div class="card card-sheet sheet-condensed">
        <table class="table table-striped table-hover table-sm-responsive">
          <tbody>
            <% @companies.each do |company| %>
              <%= render "companies/settlement", company: company %>
            <% end %>
            <% if @companies.empty? %>
              <tr>
                <td colspan=42 class='text-center'><%= t("searches.create.no_companies") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col-md-12">
      <%= paginate @companies %>
    </div>
  </div>
</div>
