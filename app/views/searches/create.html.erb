<% @title = @search.query %>

<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-6 mt-5 pt-5 pb-5">
      <%= form_for @search, url: searches_path, html: { novalidate: true, class: "form d-flex flex-column bg-white p-4" } do |f| %>
        <p class="text-center">Search for something else!</p>
        <div class="input-group input-group-sm mb-2">
          <span class="input-group-addon" id="basic-addon1"><%= theme_icon_tag "search" %></span>
          <%= f.text_field :query, required: true, autofocus: true, class: "form-control", placeholder: "Company name" %>
        </div>
        <%= f.submit "Search", class: "btn btn-primary ml-auto mt-2" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9">
      <div class="card card-sheet sheet-condensed">
        <table class="table table-striped table-hover table-sm-responsive">
          <thead>
            <tr>
              <th>Company</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @companies.each do |company| %>
              <tr>
                <td><%= link_to company.name, company, target: "_blank" %></td>
                <td><small><%= company.city %></small></td>                
                <td><small><%= company.country %></small></td>
                <td class="actions text-right">
                  <div class="btn-group">
                    <%= link_to theme_icon_tag("eye"), company, target: "_blank", 'data-toggle': 'tooltip', title: 'Company details', class: "btn btn-link" %>
                  </div>
                </td>
              </tr>
            <% end %>
            <% if @companies.empty? %>
              <tr>
                <td colspan=42 class='text-center'>Oops, no companies.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
