<% @title = "Forgot My Password" %>

<div id="main" class="devise-1">
  <div class="container-fluid">
    <div class="row">
      <header class="text-center">
        <h1><%=app_name%></h1>
        <p class="p-0 m-0 text-uppercase"><%= t("devise.passwords.new.title") %></p>
      </header>
    </div>
    <div class="row mt-5">
      <div class="col-12 col-md-6 mr-auto ml-auto">
        <div class="card">
          <div class="card-body">
            <div class="container">
              <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" } do |f| %>
                <%= f.error_notification %>

                <%= f.form_group :email, class: "row" do |f| %>
                  <%= f.label :email, class: "form-label" %>
                  <%= f.email_field :email, autofocus: true, class: "form-control" %>
                  <%= f.error_messages %>
                <% end %>

                <div class="row d-flex align-items-center mt-5">
                  <%= f.submit t("devise.passwords.new.action"), class: "btn btn-primary ml-auto" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
