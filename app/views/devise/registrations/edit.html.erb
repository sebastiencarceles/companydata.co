<% @title = "Edit #{resource_name.to_s.humanize}" %>

<div id="main" class="devise-1">
  <div class="container-fluid">
    <div class="row">
      <header class="text-center">
        <h1><%=app_name%></h1>
        <p class="p-0 m-0 text-uppercase"><%= t("devise.registrations.edit.title") %></p>
      </header>
    </div>

    <div class="row m-5">
      <div class="col-12 col-md-8 mr-auto ml-auto">
        <div class="card">
          <div class="card-header">
            <h6><%= t("devise.registrations.edit.api.title") %></h6>
          </div>
          <div class="card-body">
            <p><%= t("devise.registrations.edit.api.description") %></p>
            <table class="table">
              <tr>
                <td><strong><%= t("devise.registrations.edit.api.api_key_title") %></strong></td>
                <td><%= resource.api_key %></td>
                <td><%= link_to t("devise.registrations.edit.api.renew_api_key"), renew_api_key_path, data: { confirm: t("devise.registrations.edit.api.confirm") }, class: "btn btn-primary btn-registrations  pull-right" %></td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="row m-5">
      <div class="col-12 col-md-8 mr-auto ml-auto">
        <div class="card">
          <div class="card-header">
            <h6><%= t("devise.registrations.edit.subscription.title") %></h6>
          </div>
          <div class="card-body">
              <p><%= t("devise.registrations.edit.subscription.description") %></p>
            <table class="table">
              <tr>
                <td><strong><%= t("devise.registrations.edit.subscription.current") %></strong></td>
                <td><span id="subscription-name"></span></td>
                <td><%= link_to t("devise.registrations.edit.subscription.customer_portal"), customer_portal_path, class: "btn btn-primary btn-registrations pull-right" %></td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="row m-5">
      <div class="col-12 col-md-8 mr-auto ml-auto">
        <div class="card">
          <div class="card-header">
            <h6><%= t("devise.registrations.edit.title") %></h6>
          </div>
          <div class="card-body">
            <div class="container">
              <%= form_for resource, as: resource_name, url: registration_path(resource_name),
                html: { method: :put, novalidate: true, class: "form-horizontal" } do |f| %>

                <%= f.error_notification %>

                <%= f.form_group :email, class:"row" do |f| %>
                  <%= f.label :email, class: "col-sm-4 col-form-label" %>
                  <div class="col-md-8">
                    <%= f.email_field :email, required: true, class: "form-control" %>
                    <%= f.error_messages %>
                  </div>
                <% end %>

                <%= f.form_group :password, class: "row" do |f| %>
                  <%= f.label :password, class: "col-sm-4 col-form-label" %>
                  <div class="col-md-8">
                    <%= f.password_field :password, class: "form-control" %>
                    <%= f.error_messages %>
                    <div class="help-block">
                      <%= t("devise.registrations.edit.do_not_change_password") %>
                    </div>
                  </div>
                <% end %>

                <%= f.form_group :password_confirmation, class: "row" do |f| %>
                  <%= f.label :password_confirmation, class: "col-sm-4 col-form-label" %>
                  <div class="col-md-8">
                    <%= f.password_field :password_confirmation, class: "form-control" %>
                    <%= f.error_messages %>
                  </div>
                <% end %>

                <%= f.form_group :current_password, class: "row" do |f| %>
                  <%= f.label :current_password, class: "col-sm-4 col-form-label" %>
                  <div class="col-md-8">
                    <%= f.password_field :current_password, class: "form-control" %>
                    <%= f.error_messages %>
                    <div class="help-block">
                      <%= t("devise.registrations.edit.current_password_needed") %>
                    </div>
                  </div>
                <% end %>

                <div class="row d-flex align-items-center mt-5">
                  <%= mail_to contact_email, t("devise.registrations.edit.cancel_account"), class: "mr-auto text-danger", subject: t("devise.registrations.edit.cancel_account") %>
                  <div>
                    <%= link_to t("devise.registrations.edit.back"), :back, class: "btn btn-outline-defualt" %>
                    <%= f.submit t("devise.registrations.edit.action"), class: "btn btn-primary btn-registrations" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
